<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FirstAppStudyKotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/shape_button_rectangle</item>
        <item name="android:textAllCaps">false</item>
    </style>



    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_button_10_grey</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="EditText.username">
        <item name="android:drawableStart">@drawable/user</item>
        <item name="android:hint">Username</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.password">
        <item name="android:drawableStart">@drawable/lock</item>
        <item name="android:hint">Password</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.name">
        <item name="android:drawableStart">@drawable/baseline_email_24</item>
        <item name="android:hint">Password</item>
        <item name="android:inputType">text</item>
    </style>

</resources>